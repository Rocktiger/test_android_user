<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="66dp">

    <ImageView
        android:id="@+id/iv_bank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="5dp"
        android:src="@mipmap/ic_launcher"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/iv_bank"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_bank_name_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#343434"
            android:textSize="18sp"
            tools:text="工商银行|3322"
            />

        <TextView
            android:id="@+id/tv_bank_num_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:textColor="#e4897a"
            android:textSize="14sp"
            tools:text="12笔    90000.00元"
            />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_bank_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:textColor="#a5a5a5"
        android:textSize="12sp"
        tools:text="2019.5.20-2019.9.20"

        />
</RelativeLayout>
